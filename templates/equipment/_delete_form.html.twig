<form method="post" action="{{ path('equipment.delete', {'id': equipment.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce matos ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipment.id) }}">
    <button class="btn">
        <i class="fas fa-trash"></i>
    </button>
</form>
